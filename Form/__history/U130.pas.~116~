    dgInfo: TDBGridEh;
    Pnl_Top: TPanel;
    Panel1: TPanel;
    Panel11: TPanel;
    Panel2: TPanel;
    Panel3: TPanel;
    edtERR_CODE: TEdit;
    Panel4: TPanel;
    edtERR_NAME: TEdit;
    Panel5: TPanel;
    cbID_MACH: TComboBox;
    Panel9: TPanel;
    Panel8: TPanel;
    sbtClear: TSpeedButton;
    Panel10: TPanel;
    Panel6: TPanel;
    udRowHeight: TUpDown;
    edtRowHeight: TEdit;
    udFontSize: TUpDown;
