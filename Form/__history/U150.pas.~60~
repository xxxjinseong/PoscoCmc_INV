  fnCommandDelete;
end;

//==============================================================================
// dgInfoDblClick
//==============================================================================
procedure TfrmU150.dgInfoDblClick(Sender: TObject);
begin
  frmU150_Pop := TfrmU150_Pop.Create(Application);
  frmU150_Pop.PnlFormName.Caption := '에러 코드 수정';
  frmU150_Pop.Caption := '에러 코드 관리';
  frmU150_Pop.btnSave.Caption := '수 정';

  // 설비구분
  frmU150_Pop.cbERR_MACH.Text  := UpperCase(qryInfo.FieldByName('ERR_MACH').AsString);
  frmU150_Pop.cbERR_MACH.Color := $00E9F3E9;
  frmU150_Pop.cbERR_MACH.Enabled := False;

  // 에러코드
  frmU150_Pop.edtERR_CODE.Text  := UpperCase(qryInfo.FieldByName('ERR_CODE').AsString);
  frmU150_Pop.edtERR_CODE.Color := $00E9F3E9;
  frmU150_Pop.edtERR_CODE.ReadOnly := True;

  // 에러명
  frmU150_Pop.edtERR_NAME.Text  := UpperCase(qryInfo.FieldByName('ERR_NAME').AsString);
  frmU150_Pop.edtERR_NAME.Color := clWhite;
  frmU150_Pop.edtERR_NAME.ReadOnly := False;
  frmU150_Pop.edtERR_NAME.SetFocus;

  // 에러내용
  frmU150_Pop.edtERR_DESC.Text  := UpperCase(qryInfo.FieldByName('ERR_DESC').AsString);
  frmU150_Pop.edtERR_DESC.Color := clWhite;
  frmU150_Pop.edtERR_DESC.ReadOnly := False;

  // 참고사항
  frmU150_Pop.edtERR_ETC.Text  := UpperCase(qryInfo.FieldByName('ERR_ETC').AsString);
  frmU150_Pop.edtERR_ETC.Color := clWhite;
  frmU150_Pop.edtERR_ETC.ReadOnly := False;

  frmU150_Pop.ShowModal ;
end;

end.




